<launch>
    <!-- rins_world.launch -->
    <arg name="base" value="kobuki"/>
    <!-- create, roomba -->
   
    <arg name="gui" default="true"/>
    <arg name="stacks" value="hexagons"/>
    <!-- circles, hexagons -->
    <arg name="3d_sensor" value="$(optenv TURTLEBOT_3D_SENSOR kinect)"/>
    <!-- kinect, asus_xtion_pro -->

  
    <include file="$(find task1)/launch/includes/$(arg base).launch.xml">
        <arg name="base" value="$(arg base)"/>
        <arg name="stacks" value="$(arg stacks)"/>
        <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
    </include>

   



    <!-- Map server -->
    <arg name="map_file" default="$(find task1)/maps/h.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

    <!-- Localization -->
    <arg name="initial_pose_x" default="0.0"/>
    <arg name="initial_pose_y" default="0.0"/>
    <arg name="initial_pose_a" default="0.0"/>
    <include file="$(find turtlebot_custom_navigation)/launch/includes/amcl/amcl.launch.xml">
        <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
        <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
        <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
    </include>

    <!-- Move base -->
    <include file="$(find turtlebot_custom_navigation)/launch/includes/move_base.launch.xml"/>


    <!-- Rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find turtlebot_rviz_launchers)/rviz/navigation.rviz"/>

    <!-- Sound play node -->
    <node name="soundplay_node" pkg="sound_play" type="soundplay_node.py" />

</launch>